<h2>Аутентификация</h2>

<div>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, "E-mail:" %>
        <%= f.email_field :email %>

        <%= f.label :password, "Пароль:" %>
        <%= f.password_field :password %>

        <%= f.submit "Войти" %>
    <% end %>
  </div>
</div>
