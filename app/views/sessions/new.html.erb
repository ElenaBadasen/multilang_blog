<h2>Аутентификация</h2>

<div>
  <div class="auth_form">
    <%= form_for(:session, url: login_path) do |f| %>
        <table>
          <tr>
            <td class="auth_td"><%= f.label :email, "E-mail:" %></td>
            <td class="auth_td"><%= f.email_field :email %></div></td>
          </tr>
          <tr>
            <td class="auth_td"><%= f.label :password, "Пароль:" %></td>
            <td class="auth_td"><%= f.password_field :password %></td>
          </tr>
          <tr>
            <td class="auth_td"><%= f.submit "Войти" %></td><td></td>
          </tr>
        </table>
    <% end %>
  </div>
</div>
