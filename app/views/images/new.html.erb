<h2><%= "Загрузка изображения" %></h2>
<% if @image.errors.any? %>
    <ul>
      <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @image, url: {action: :create}, html: { multipart: true }, method: :POST  do |f| %>
    <table>
      <tr>
        <td>Картинка:</td>
        <td>
          <% if @image.file.present? %>
              <%= image_tag @image.file.url %>
          <% end %>
          <%= f.file_field :file %>
          <%= f.hidden_field :file_cache %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "Загрузить" %></td><td></td>
      </tr>
    </table>
<% end %>