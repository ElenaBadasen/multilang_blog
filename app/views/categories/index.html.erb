<% @categories.each do |c| %>
    <p>
      <%= image_tag c.images[0].file.url %>
      <%= link_to c.name, category_posts_path(@username, c.path) %>
      <%= link_to "Редактировать", edit_category_path(@username, c.id) %>
      <%= link_to "Удалить", category_path(@username, c.id), method: :delete, data: { confirm: "Вы уверены, что хотите удалить эту категорию?" } %>
    </p>
<% end %>
<p><%= link_to "Создать новую категорию", new_category_path(@username) %></p>
<p><%= link_to "Редактировать пользователей", users_path %></p>